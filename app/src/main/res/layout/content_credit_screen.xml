<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnf.relax.CreditScreen"
    tools:showIn="@layout/activity_credit_screen">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/launch_background"

    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project inspired from"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chill n' Sound"
        android:layout_below="@+id/tv_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://chillnsound.petrovicstefan.rs/"
        android:autoLink="web"
        android:layout_below="@+id/tv_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="The earth has music for those who listen."
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:textColor="@color/white"
        />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
