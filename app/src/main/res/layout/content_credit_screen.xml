<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mnf.relax.CreditScreen"
    tools:showIn="@layout/activity_credit_screen">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/launch_background"

    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project inspired from"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chill n' Sound"
        android:layout_below="@+id/tv_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://chillnsound.petrovicstefan.rs/"
        android:autoLink="web"
        android:layout_below="@+id/tv_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/tv_rate_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help us Grow"
        android:layout_below="@+id/tv_three"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        />



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rate_card"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_rate_head"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:shape="ring"


        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@android:color/transparent"

        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Rate "
                android:textColor="@color/white"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/tv_rate"
                android:layout_centerHorizontal="true"
                android:text="Peacely     "
                android:textColor="@color/white"

                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<TextView
        android:id="@+id/tv_ic_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Icon from"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/tv_three"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        />-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/privacy_policy"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:layout_below="@+id/rate_card"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:shape="ring"
        card_view:cardCornerRadius="20dp"
        card_view:cardBackgroundColor="@android:color/transparent"

        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Privacy Policy    "
                android:textColor="@color/white"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_ic_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Icon from Freepik"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:visibility="gone"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_ic_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.flaticon.com/"
        android:autoLink="web"
        android:visibility="gone"
        android:layout_below="@+id/tv_ic_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/white"
        />
</RelativeLayout>




    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:layout_alignParentTop="true"
        android:layout_marginBottom="40dp"
        android:text="The earth has music for those who listen."
        android:layout_centerHorizontal="true"
        android:textSize="19dp"
        android:textColor="@color/white"
        />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
